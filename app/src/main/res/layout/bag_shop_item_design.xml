<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="20dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/productImage"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:scaleType="fitXY"
            android:src="@drawable/man" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/productname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxWidth="@dimen/_110sdp"
        android:maxLines="2"
        android:text="i phone 11 pro max 37"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintStart_toEndOf="@+id/cardView"
        app:layout_constraintTop_toTopOf="@+id/cardView" />


    <TextView
        android:id="@+id/quantety"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity"
        android:textColor="#919191"
        android:textSize="@dimen/_15sdp"
        app:layout_constraintBottom_toBottomOf="@+id/btnmins"
        app:layout_constraintStart_toStartOf="@+id/productname"
        app:layout_constraintTop_toTopOf="@+id/btnmins"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.cardview.widget.CardView
        android:id="@+id/btnmins"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/black"
        app:cardCornerRadius="33333dp"
        app:layout_constraintBottom_toBottomOf="@+id/alkmeaTExtView"
        app:layout_constraintEnd_toStartOf="@+id/alkmeaTExtView"
        app:layout_constraintTop_toTopOf="@+id/alkmeaTExtView">

        <ImageView
            android:id="@+id/imagemin"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_marginVertical="@dimen/_3sdp"
            android:scaleType="center"
            android:src="@drawable/ic_baseline_remove_24" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/alkmeaTExtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="2"


        android:textColor="@color/black"
        android:textSize="@dimen/_18sdp"
        app:layout_constraintBottom_toBottomOf="@+id/btnplus"
        app:layout_constraintEnd_toStartOf="@+id/btnplus"
        app:layout_constraintTop_toTopOf="@+id/btnplus" />

    <androidx.cardview.widget.CardView
        android:id="@+id/btnplus"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/black"
        app:cardCornerRadius="33333dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imagepluse"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_3sdp"
            android:layout_marginVertical="@dimen/_5sdp"
            android:scaleType="center"
            android:src="@drawable/ic_baseline_add_24" />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="200$"
        android:textColor="#919191"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:textSize="@dimen/_15sdp"
        app:layout_constraintEnd_toEndOf="@+id/btnplus"
        app:layout_constraintTop_toTopOf="@+id/productname" />

</androidx.constraintlayout.widget.ConstraintLayout>